<Window x:Class="FFXIV_TexTools2.Views.Update"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FFXIV_TexTools2.Views"
        mc:Ignorable="d"
        Title="New Update Available!" Height="400" Width="600" WindowStyle="ToolWindow" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Topmost="True" SizeToContent="Width" MaxWidth="700">
    <Grid>
        <Grid>
            <RichTextBox x:Name="changeLogTextBox" Margin="10,10,10,50" IsReadOnly="True" VerticalScrollBarVisibility="Auto"/>

            <Grid Margin="8,0,12,10" Height="34" VerticalAlignment="Bottom">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Button x:Name="visitWebsiteButton" Content="Visit Website" Margin="5" Click="visitWebsiteButton_Click"/>
                <Button x:Name="closeButton" Content="Close" Grid.Column="1" Margin="5" Click="closeButton_Click"/>
            </Grid>
        </Grid>
    </Grid>
</Window>
